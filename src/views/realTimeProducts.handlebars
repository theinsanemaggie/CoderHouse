<h1>Productos en tiempo real</h1>
<ul id="listaProductos"></ul>
<h2>Crear producto</h2>
<form id="formCrear">
  <div class="fila">
    <input id="nombre" name="nombre" placeholder="Nombre" required>
    <input id="descripcion" name="descripcion" placeholder="Descripción" required>
    <input id="codigo" name="codigo" placeholder="Código" required>
    <input id="precio" name="precio" type="number" step="0.01" placeholder="Precio" required>
    <input id="stock" name="stock" type="number" placeholder="Stock" required>
    <input id="categoria" name="categoria" placeholder="Categoría" required>
    <input id="thumbnails" name="thumbnails" placeholder="Miniaturas (URL)" >
  </div>
  <button type="submit">Agregar</button>
</form>

<h2>Eliminar producto</h2>
<form id="formEliminar">
  <input id="idProducto" name="idProducto" type="text" placeholder="ID del producto" required>
  <button type="submit">Eliminar</button>
</form>
<p><a href="/">Volver al inicio</a></p>
